
html
    head
        link(rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous")
        link(rel="stylesheet" href="/mystyle.css")
        title Home Page - Microblog
    body
    nav(class="navbar navbar-expand-lg navbar-light bg-light")
        img(src="https://l-userpic.livejournal.com/107848592/6706035" width="40" height="40" class="rounded float-left" alt="")
        a(class="navbar-brand" href="#") Hot_K
        div(class="collapse navbar-collapse" id="navbarNav")
            ul(class="navbar-nav")
                li(class="nav-item active")
                a(class="nav-link" href="/") Home 
                    span(class="sr-only")
    h3 Top 10 games                
    each game in data
        div(class="game-block")
            div
                img(class="game-block-img" src=`${"http:" + game.cover.url}`)   
            div(class="game-block-text")    
                p
                    a(href=`${"/games/" + game.id}`)  #{ game.name }             
                p    
                    h7 Game rating: #{ Math.round(game.popularity) }


